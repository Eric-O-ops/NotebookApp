<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.onboard.OnBoardMainFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_skip_on_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="#00000000"
        android:paddingTop="25dp"
        android:text="@string/skip_screen"
        android:textAllCaps="false"
        android:textColor="@color/orange"
        android:textSize="15sp" />

   <androidx.viewpager2.widget.ViewPager2
       android:id="@+id/view_pager"
       android:layout_width="match_parent"
       android:layout_height="match_parent"/>

    <me.relex.circleindicator.CircleIndicator3
        android:id="@+id/dots_indicator"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        app:ci_drawable="@drawable/ci_selected"
        app:ci_drawable_unselected="@drawable/ci_unselected"
        app:ci_height="8dp"
        app:ci_width="8dp"
        android:layout_marginBottom="80dp"/>

</FrameLayout>