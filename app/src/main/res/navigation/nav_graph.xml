<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    tools:ignore="InvalidNavigation">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.eric.notebook.ui.fragments.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_mainFragment_to_detailFragment"
            app:destination="@id/detailFragment" />

        <action
            android:id="@+id/action_mainFragment_to_addNoteFragment"
            app:destination="@id/addNoteFragment" />
        <argument
            android:name="noteId"
            app:argType="integer"
            android:defaultValue="0" />

    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.eric.notebook.ui.fragments.main.detail.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail">

        <action
            android:id="@+id/action_detailFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/detailFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="noteId"
            app:argType="integer"
            android:defaultValue="0" />

    </fragment>

    <fragment
        android:id="@+id/addNoteFragment"
        android:name="com.eric.notebook.ui.fragments.main.addnote.AddNoteFragment"
        android:label="fragment_add_note"
        tools:layout="@layout/fragment_add_note">

        <action
            android:id="@+id/action_addNoteFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/addNoteFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/mainOnBoardFragment"
        android:name="com.eric.notebook.ui.fragments.onboard.OnBoardMainFragment"
        android:label="fragment_main_on_board"
        tools:layout="@layout/fragment_main_on_board">

        <action
            android:id="@+id/action_mainOnBoardFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/mainOnBoardFragment"
            app:popUpToInclusive="true" />

    </fragment>
</navigation>